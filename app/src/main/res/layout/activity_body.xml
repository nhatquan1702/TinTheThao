<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_weight="10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imgHinhAnhBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/img_bg"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvTieuDeBody"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvNgayTaoBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/clock"
            android:textColor="@color/black"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/tvNoiDungBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:textColor="@color/black" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tvTacGiaBody"
            android:layout_marginLeft="180dp"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/pen"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="italic"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/tvDGBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá bài viết"
            android:textStyle="italic"
            android:layout_gravity="center"/>
        <RatingBar
            android:id="@+id/rtbDGBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="0.5" />
    </LinearLayout>
</LinearLayout>