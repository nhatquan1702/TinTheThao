<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg001"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_bg"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:src="@drawable/ic_people" />

    <EditText
        android:paddingStart="10dp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:id="@+id/edtEmailLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:ems="10"
        android:textColorHint="@color/white"
        android:background="@drawable/login_bg"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColor="#fff"
        android:textSize="15dp"
        />

    <EditText
        android:paddingStart="10dp"
        android:id="@+id/edtPassLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEmailLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:background="@drawable/login_bg"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_pass"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawablePadding="10dp"
        android:textColorHint="@color/white"
        android:hint="Mật khẩu"
        android:textColor="#fff"
        android:textSize="15dp"
        app:passwordToggleTint="#FFEA00"
        app:passwordToggleEnabled="true"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/cvDNLogin"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#FF58C7"

        android:layout_below="@+id/edtPassLogin"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/login_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDN"
                android:text="Đăng nhập"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:textSize="20sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvDKLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C6FF00"
        android:text="Đăng ký tài khoản"
        android:layout_below="@id/cvDNLogin"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDKLogin"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />
</RelativeLayout>